{
  "env": {
    "webpack": {
      "plugins": [
        "transform-decorators-legacy",
        "transform-class-properties",
        "syntax-flow"
      ],
      "presets": [
        [
          "env",
          {
            "targets": {
              "browsers": [
                "last 2 versions",
                "ie 11"
              ]
            },
            "loose": true,
            "modules": false,
            "include": [
              "transform-es2015-literals",
              "transform-es2015-template-literals"
            ],
            "useBuiltIns": true
          }
        ]
      ]
    },
    "node": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": 4
            },
            "loose": true,
            "modules": "commonjs"
          }
        ]
      ]
    }
  }
}
